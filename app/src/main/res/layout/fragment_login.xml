<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.LoginFragment">

    <FrameLayout
        android:id="@+id/login_header_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/text_style"
        android:id="@+id/login_nickname_label"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:text="닉네임"
        app:layout_constraintLeft_toLeftOf="@+id/login_nickname_edittext"
        app:layout_constraintTop_toBottomOf="@id/login_header_container" />

    <EditText
        android:id="@+id/login_nickname_edittext"
        style="@style/login_input_style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint=""
        app:layout_constraintTop_toBottomOf="@id/login_nickname_label" />

    <TextView
        style="@style/text_style"
        android:id="@+id/login_email_label"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:text="이메일"
        app:layout_constraintLeft_toLeftOf="@+id/login_email_edittext"
        app:layout_constraintTop_toBottomOf="@+id/login_nickname_edittext"/>

    <EditText
        android:id="@+id/login_email_edittext"
        style="@style/login_input_style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_email_label" />

    <TextView
        style="@style/text_style"
        android:id="@+id/login_password_label"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="비밀번호"
        app:layout_constraintLeft_toLeftOf="@id/login_password_edittext"
        app:layout_constraintTop_toBottomOf="@id/login_email_edittext" />

    <EditText
        android:id="@+id/login_password_edittext"
        style="@style/login_input_style"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_password_label" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_button"
        style="@style/login_button_style"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:text="로그인"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_password_edittext" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button">

        <TextView
            style="@style/text_style"
            android:id="@+id/login_join_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 회원이 아니세요?"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/text_style"
            android:id="@+id/login_join_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="회원가입"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/login_join_label"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
