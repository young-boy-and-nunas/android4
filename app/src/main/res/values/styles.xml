<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Login Fragment -->
    <style name="login_button_style">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/sandoll_misaeng</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="login_input_style">
        <item name="android:theme">@style/EditTextTheme</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF343434</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/sandoll_misaeng</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColorHint">#FFD8D8D8</item>
    </style>

    <style name="login_input_label_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#FF343434</item>
        <item name="android:fontFamily">@font/sandoll_misaeng</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="login_join_description_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#FFBEBEBE</item>
        <item name="android:fontFamily">@font/sandoll_misaeng</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="login_join_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">#FF343434</item>
        <item name="android:fontFamily">@font/sandoll_misaeng</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_style">
        <item name="android:fontFamily">@font/sandoll_misaeng</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>
